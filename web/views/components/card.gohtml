<a href="{{ .Uri }}">
  <div
    class="card relative h-72 w-72 bg-base-100 shadow-xl md:h-96 md:w-96 mb-16"
    style="background-image: url({{ .Image }}); background-size: cover; background-position: center;"
  >
    <div class="absolute bottom-0 h-12 w-full">
      <h2
        class="align-center card-title h-full w-full justify-center bg-base-100 bg-opacity-50 text-sky"
      >
        {{ .Name }}
      </h2>
    </div>
  </div>
</a>
